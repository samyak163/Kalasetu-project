{
  "version": 2,
  "builds": [
    {
      "src": "kalasetu-backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "kalasetu-frontend/package.json",
      "use": "@vercel/static-build",
      "builds": [
        { "src": "package.json", "use": "@vercel/static-build" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/kalasetu-backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/kalasetu-frontend/dist/$1"
    }
  ]
}
